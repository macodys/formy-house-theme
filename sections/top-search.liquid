{% comment %}
  Top Search Bar - centered search input replacing the header
{% endcomment %}

<div class="top-search" role="search">
  <div class="top-search__container">
    <form action="/search" method="get" role="search" class="top-search__form">
      <input
        class="top-search__input"
        type="search"
        name="q"
        value="{{ search.terms | escape }}"
        placeholder="Search products..."
        aria-label="Search"
        autocomplete="off"
      >
      <button class="top-search__button" type="submit" aria-label="Search">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" aria-hidden="true">
          <path d="M19 19L13 13M15 8C15 11.866 11.866 15 8 15C4.134 15 1 11.866 1 8C1 4.134 4.134 1 8 1C11.866 1 15 4.134 15 8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </form>
  </div>
</div>

<style>
  .top-search {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(10, 10, 10, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .top-search__container {
    max-width: 900px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: center;
  }

  .top-search__form {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 0.75rem;
    align-items: center;
  }

  .top-search__input {
    width: 100%;
    height: 48px;
    padding: 0 1.25rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: linear-gradient(145deg, var(--color-card-bg), var(--color-dark-bg));
    color: #fff;
    font-size: 1.5rem;
    outline: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .top-search__input::placeholder {
    color: #a7a7a7;
  }

  .top-search__input:focus {
    border-color: rgba(212, 175, 55, 0.6);
    box-shadow: 0 0 0 4px rgba(212, 175, 55, 0.15);
  }

  .top-search__button {
    height: 48px;
    padding: 0 1.25rem;
    border-radius: 12px;
    border: 1px solid var(--color-gold);
    background: var(--color-gold);
    color: #000;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
  }

  .top-search__button:hover {
    transform: translateY(-1px);
    box-shadow: 0 10px 24px rgba(212, 175, 55, 0.35);
    background: #ffffff;
  }

  @media (max-width: 749px) {
    .top-search__container {
      padding: 0.75rem 1rem;
    }

    .top-search__input,
    .top-search__button {
      height: 44px;
    }
  }
</style>

{% schema %}
{
  "name": "Top Search",
  "tag": "section",
  "class": "section-top-search",
  "settings": []
}
{% endschema %}


