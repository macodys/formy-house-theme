{% comment %}
  Category Cards Section - Product categories with dark luxury design
{% endcomment %}

<div class="category-cards">
  <div class="category-cards__container">
    <div class="category-cards__grid">
      {% for block in section.blocks %}
        <div class="category-card" {{ block.shopify_attributes }}>
          <div class="category-card__image">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 400 | image_tag: loading: 'lazy' }}
            {% else %}
              <div class="category-card__placeholder">
                {% case block.settings.category %}
                  {% when 'candles' %}
                    <div class="category-card__icon category-card__icon--candle"></div>
                  {% when 'lighting' %}
                    <div class="category-card__icon category-card__icon--lamp"></div>
                  {% when 'decor' %}
                    <div class="category-card__icon category-card__icon--decor"></div>
                  {% when 'sculptures' %}
                    <div class="category-card__icon category-card__icon--sculpture"></div>
                {% endcase %}
              </div>
            {% endif %}
          </div>
          <h3 class="category-card__title">{{ block.settings.title | default: block.settings.category | capitalize }}</h3>
          <div class="category-card__actions">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="category-card__link">Explore</a>
            {% endif %}
            {% if block.settings.link_secondary != blank %}
              <a href="{{ block.settings.link_secondary }}" class="category-card__link category-card__link--secondary">View All</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .category-cards {
    padding: 8rem 0;
    background: var(--color-dark-bg);
  }

  .category-cards__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .category-cards__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }

  .category-card {
    background: linear-gradient(145deg, var(--color-card-bg), var(--color-dark-bg));
    border-radius: 20px;
    padding: 3rem 2rem;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    border-color: rgba(212, 175, 55, 0.4);
  }

  .category-card:hover::before {
    opacity: 1;
  }

  .category-card__image {
    width: 100%;
    height: 200px;
    margin-bottom: 2rem;
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    background: var(--color-surface);
  }

  .category-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-card__image img {
    transform: scale(1.05);
  }

  .category-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(145deg, var(--color-surface), var(--color-card-bg));
  }

  .category-card__icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    position: relative;
  }

  .category-card__icon--candle {
    background: linear-gradient(145deg, var(--color-gold), var(--color-gold-dark));
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.6);
  }

  .category-card__icon--candle::before {
    content: '';
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    background: #ff6b35;
    border-radius: 50%;
    box-shadow: 0 0 8px #ff6b35;
    animation: flicker 2s ease-in-out infinite alternate;
  }

  .category-card__icon--lamp {
    background: linear-gradient(145deg, var(--color-surface), var(--color-card-bg));
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.4);
  }

  .category-card__icon--decor {
    background: linear-gradient(145deg, var(--color-warm-brown), var(--color-warm-brown-dark));
    box-shadow: 0 0 15px rgba(139, 115, 85, 0.4);
  }

  .category-card__icon--sculpture {
    background: linear-gradient(145deg, #666, #444);
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
  }

  .category-card__title {
    font-family: var(--font-heading-family);
    font-size: 2.2rem;
    font-weight: 300;
    margin: 0 0 1rem 0;
    color: var(--color-text-light);
  }

  .category-card__actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .category-card__link {
    display: inline-block;
    padding: 1rem 2rem;
    background: transparent;
    color: var(--color-gold);
    text-decoration: none;
    border: 1px solid var(--color-gold);
    border-radius: 25px;
    font-weight: 500;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 1.2rem;
    position: relative;
    overflow: hidden;
  }

  .category-card__link:hover {
    background: var(--color-gold);
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
  }

  .category-card__link--secondary {
    background: var(--color-gold);
    color: #000;
    border-color: var(--color-gold);
  }

  .category-card__link--secondary:hover {
    background: #ffffff;
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.5);
  }

  .category-card__link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .category-card__link:hover::before {
    left: 100%;
  }

  @keyframes flicker {
    0% { opacity: 0.8; transform: translateX(-50%) scale(1); }
    100% { opacity: 1; transform: translateX(-50%) scale(1.1); }
  }

  @media (max-width: 768px) {
    .category-cards {
      padding: 4rem 0;
    }

    .category-cards__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .category-card {
      padding: 2rem 1.5rem;
    }
  }
</style>

