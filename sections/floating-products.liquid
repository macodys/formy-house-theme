{% comment %}
  Floating Products Section - "Floating products/showcases" with quality focus
{% endcomment %}

<div class="floating-products">
  <div class="floating-products__container">
    <div class="floating-products__header">
      <h2 class="floating-products__title">Floating products/showcases — quality</h2>
      <p class="floating-products__subtitle">Discover our curated collections of premium home decor</p>
    </div>
    
    <div class="floating-products__grid">
      <div class="floating-product-card floating-product-card--modern">
        <div class="floating-product-card__image">
          <div class="floating-product-card__scene">
            <div class="floating-product-card__sculpture floating-product-card__sculpture--organic"></div>
            <div class="floating-product-card__lamp floating-product-card__lamp--domed"></div>
            <div class="floating-product-card__candle floating-product-card__candle--small"></div>
          </div>
        </div>
        <div class="floating-product-card__content">
          <h3 class="floating-product-card__title">Modern Serenity</h3>
          <p class="floating-product-card__description">Minimalist arrangements for peaceful living</p>
          <a href="/collections/modern-serenity" class="floating-product-card__button">Explore Collection</a>
        </div>
      </div>
      
      <div class="floating-product-card floating-product-card--warm">
        <div class="floating-product-card__image">
          <div class="floating-product-card__scene">
            <div class="floating-product-card__lamp floating-product-card__lamp--spherical"></div>
            <div class="floating-product-card__candle floating-product-card__candle--medium"></div>
            <div class="floating-product-card__sculpture floating-product-card__sculpture--golden"></div>
          </div>
        </div>
        <div class="floating-product-card__content">
          <h3 class="floating-product-card__title">Warm Glow</h3>
          <p class="floating-product-card__description">Cozy lighting for intimate spaces</p>
          <a href="/collections/warm-glow" class="floating-product-card__button">Explore Collection</a>
        </div>
      </div>
      
      <div class="floating-product-card floating-product-card--night">
        <div class="floating-product-card__image">
          <div class="floating-product-card__scene">
            <div class="floating-product-card__lamp floating-product-card__lamp--modern"></div>
            <div class="floating-product-card__lamp floating-product-card-card__lamp--small-sphere"></div>
            <div class="floating-product-card__candle floating-product-card__candle--small"></div>
          </div>
        </div>
        <div class="floating-product-card__content">
          <h3 class="floating-product-card__title">Night Light</h3>
          <p class="floating-product-card__description">Elegant lighting for evening ambiance</p>
          <a href="/collections/night-light" class="floating-product-card__button">Explore Collection</a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .floating-products {
    padding: 8rem 0;
    background: var(--color-dark-bg);
    position: relative;
    overflow: hidden;
  }

  .floating-products::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 70%, rgba(212, 175, 55, 0.05) 0%, transparent 60%);
    pointer-events: none;
  }

  .floating-products__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .floating-products__header {
    text-align: center;
    margin-bottom: 6rem;
  }

  .floating-products__title {
    font-family: var(--font-heading-family);
    font-size: 4rem;
    font-weight: 300;
    margin: 0 0 1rem 0;
    color: #ffffff;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
  }

  .floating-products__title.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .floating-products__subtitle {
    font-size: 1.8rem;
    color: #cccccc;
    margin: 0;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease 0.2s;
  }

  .floating-products__subtitle.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .floating-products__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 4rem;
  }

  .floating-product-card {
    background: linear-gradient(145deg, var(--color-card-bg), var(--color-dark-bg));
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.5s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    opacity: 0;
    transform: translateY(50px);
    position: relative;
  }

  .floating-product-card.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .floating-product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
    border-color: rgba(212, 175, 55, 0.3);
  }

  .floating-product-card--modern {
    background: linear-gradient(145deg, var(--color-warm-brown), var(--color-warm-brown-dark));
  }

  .floating-product-card--warm {
    background: linear-gradient(145deg, #8b4513, #654321);
  }

  .floating-product-card--night {
    background: linear-gradient(145deg, var(--color-surface), var(--color-card-bg));
  }

  .floating-product-card__image {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: hidden;
    background: var(--color-surface);
  }

  .floating-product-card__scene {
    position: absolute;
    bottom: 20%;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 200px;
    background: linear-gradient(145deg, var(--color-card-bg), var(--color-dark-bg));
    border-radius: 15px;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 2rem;
  }

  .floating-product-card__lamp {
    position: relative;
    border-radius: 50%;
  }

  .floating-product-card__lamp--spherical {
    width: 60px;
    height: 60px;
    background: radial-gradient(circle at 30% 30%, var(--color-gold), var(--color-gold-dark));
    box-shadow: 
      0 0 20px rgba(212, 175, 55, 0.7),
      inset 0 0 15px rgba(255, 255, 255, 0.3);
    animation: glow 3s ease-in-out infinite alternate;
  }

  .floating-product-card__lamp--modern {
    width: 50px;
    height: 50px;
    background: linear-gradient(145deg, var(--color-surface), var(--color-card-bg));
    border-radius: 8px;
    box-shadow: 
      0 0 15px rgba(212, 175, 55, 0.5),
      inset 0 0 8px rgba(255, 255, 255, 0.1);
  }

  .floating-product-card__lamp--domed {
    width: 40px;
    height: 40px;
    background: linear-gradient(145deg, #444, #222);
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
  }

  .floating-product-card__lamp--small-sphere {
    width: 30px;
    height: 30px;
    background: radial-gradient(circle at 30% 30%, var(--color-gold), var(--color-gold-dark));
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.6);
    animation: glow 3s ease-in-out infinite alternate;
  }

  .floating-product-card__candle {
    width: 15px;
    height: 40px;
    background: linear-gradient(to bottom, var(--color-gold), var(--color-gold-dark));
    border-radius: 8px;
    position: relative;
    box-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
  }

  .floating-product-card__candle--small {
    width: 12px;
    height: 30px;
  }

  .floating-product-card__candle--medium {
    width: 18px;
    height: 50px;
  }

  .floating-product-card__candle::before {
    content: '';
    position: absolute;
    top: -3px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    background: #ff6b35;
    border-radius: 50%;
    box-shadow: 0 0 6px #ff6b35;
    animation: flicker 2s ease-in-out infinite alternate;
  }

  .floating-product-card__sculpture {
    width: 35px;
    height: 35px;
    background: linear-gradient(145deg, #666, #444);
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
  }

  .floating-product-card__sculpture--organic {
    border-radius: 50%;
    background: linear-gradient(145deg, #888, #666);
  }

  .floating-product-card__sculpture--golden {
    background: linear-gradient(145deg, var(--color-gold), var(--color-gold-dark));
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.4);
  }

  .floating-product-card__content {
    padding: 3rem;
    text-align: center;
  }

  .floating-product-card__title {
    font-family: var(--font-heading-family);
    font-size: 2.4rem;
    font-weight: 300;
    margin: 0 0 1rem 0;
    color: #ffffff;
  }

  .floating-product-card__description {
    font-size: 1.6rem;
    color: var(--color-text-muted);
    margin: 0 0 2rem 0;
    line-height: 1.5;
  }

  .floating-product-card__button {
    display: inline-block;
    padding: 1.2rem 2.5rem;
    background: var(--color-gold);
    color: #000;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 1.4rem;
    transition: all 0.3s ease;
  }

  .floating-product-card__button:hover {
    background: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
  }

  @keyframes glow {
    0% { box-shadow: 0 0 20px rgba(212, 175, 55, 0.6), inset 0 0 15px rgba(255, 255, 255, 0.2); }
    100% { box-shadow: 0 0 30px rgba(212, 175, 55, 0.8), inset 0 0 20px rgba(255, 255, 255, 0.3); }
  }

  @keyframes flicker {
    0% { opacity: 0.8; transform: translateX(-50%) scale(1); }
    100% { opacity: 1; transform: translateX(-50%) scale(1.1); }
  }

  @media (max-width: 768px) {
    .floating-products {
      padding: 4rem 0;
    }

    .floating-products__title {
      font-size: 3rem;
    }

    .floating-products__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .floating-product-card__content {
      padding: 2rem;
    }
  }
</style>

<script>
  // Scroll-triggered animations for floating products
  document.addEventListener('DOMContentLoaded', function() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate');
        }
      });
    }, observerOptions);

    // Observe title and subtitle
    const title = document.querySelector('.floating-products__title');
    const subtitle = document.querySelector('.floating-products__subtitle');
    
    if (title) observer.observe(title);
    if (subtitle) observer.observe(subtitle);

    // Observe product cards
    const cards = document.querySelectorAll('.floating-product-card');
    cards.forEach((card, index) => {
      observer.observe(card);
    });
  });
</script>

