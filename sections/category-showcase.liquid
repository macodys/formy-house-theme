  "name": "Category Showcase",
  "tag": "section",
  "class": "section-category-showcase",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category Name"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Showcase",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Furniture",
            "description": "Stylish and comfortable pieces"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Lighting",
            "description": "Illuminate your space"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Decor",
            "description": "Add personality to your home"
          }
        }
      ]
    }
  ]
}
{% endschema %}
