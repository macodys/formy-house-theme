{% comment %}
  Category Showcase Section
{% endcomment %}

<div class="category-showcase">
  <div class="category-showcase__container">
    {% if section.settings.heading != blank %}
      <h2 class="category-showcase__title">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="category-showcase__grid">
      {% for block in section.blocks %}
        <div class="category-card" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="category-card__link">
            {% if block.settings.image != blank %}
              <div class="category-card__image">
                {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: block.settings.title }}
              </div>
            {% endif %}
            <div class="category-card__content">
              <h3 class="category-card__title">{{ block.settings.title }}</h3>
              {% if block.settings.description != blank %}
                <p class="category-card__description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .category-showcase {
    padding: 8rem 0;
    background: #ffffff;
  }

  .category-showcase__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .category-showcase__title {
    font-family: var(--font-heading-family);
    font-size: 4rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 6rem;
    color: var(--color-primary);
  }

  .category-showcase__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
  }

  .category-card {
    background: #ffffff;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .category-card__link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .category-card__image {
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: #f5f5f5;
  }

  .category-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-card__image img {
    transform: scale(1.05);
  }

  .category-card__content {
    padding: 2.5rem;
  }

  .category-card__title {
    font-family: var(--font-heading-family);
    font-size: 2.4rem;
    font-weight: 400;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .category-card__description {
    font-size: 1.5rem;
    line-height: 1.6;
    color: rgba(0, 0, 0, 0.7);
    margin: 0;
  }

  @media (max-width: 768px) {
    .category-showcase {
      padding: 4rem 0;
    }

    .category-showcase__title {
      font-size: 3rem;
      margin-bottom: 4rem;
    }

    .category-showcase__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>

