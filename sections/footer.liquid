<style>
  .footer {
    background: linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 100%);
    color: #ffffff;
    padding: 8rem 0 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer__content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 6rem;
    margin-bottom: 4rem;
  }

  .footer__brand {
    max-width: 400px;
  }

  .footer__logo {
    font-family: var(--font-heading-family);
    font-size: 3rem;
    font-weight: 300;
    margin: 0 0 2rem 0;
    background: linear-gradient(135deg, #ffffff, var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer__description {
    font-size: 1.6rem;
    line-height: 1.6;
    color: #cccccc;
    margin: 0 0 3rem 0;
  }

  .footer__social {
    display: flex;
    gap: 2rem;
  }

  .footer__social-link {
    color: #cccccc;
    transition: all 0.3s ease;
    padding: 1rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
  }

  .footer__social-link:hover {
    color: var(--color-accent);
    background: rgba(212, 175, 55, 0.1);
    transform: translateY(-2px);
  }

  .footer__links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4rem;
  }

  .footer__column-title {
    font-family: var(--font-heading-family);
    font-size: 1.8rem;
    font-weight: 400;
    margin: 0 0 2rem 0;
    color: #ffffff;
  }

  .footer__column-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__column-list li {
    margin-bottom: 1rem;
  }

  .footer__link {
    color: #cccccc;
    text-decoration: none;
    font-size: 1.4rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer__link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-accent);
    transition: width 0.3s ease;
  }

  .footer__link:hover {
    color: var(--color-accent);
  }

  .footer__link:hover::after {
    width: 100%;
  }

  .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 3rem;
  }

  .footer__bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer__copyright {
    color: #999;
    font-size: 1.4rem;
    margin: 0;
  }

  .footer__legal {
    display: flex;
    gap: 3rem;
  }

  .footer__legal-link {
    color: #999;
    text-decoration: none;
    font-size: 1.4rem;
    transition: color 0.3s ease;
  }

  .footer__legal-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .footer {
      padding: 4rem 0 2rem;
    }

    .footer__content {
      grid-template-columns: 1fr;
      gap: 4rem;
    }

    .footer__links {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer__bottom-content {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

    .footer__legal {
      gap: 2rem;
    }
  }
</style>

