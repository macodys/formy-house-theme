{% comment %}
  Announcement Bar Section
{% endcomment %}

{% if section.settings.message != blank %}
  <div class="announcement-bar">
    <div class="announcement-bar__container">
      <p class="announcement-bar__message">{{ section.settings.message }}</p>
      {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}" class="announcement-bar__link">
          {{ section.settings.link_text | default: 'Learn More' }}
        </a>
      {% endif %}
    </div>
  </div>
{% endif %}

<style>
  .announcement-bar {
    background: linear-gradient(135deg, var(--color-accent), #b8941f);
    color: #000;
    padding: 1rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .announcement-bar::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    animation: shimmer 3s infinite;
  }

  .announcement-bar__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    position: relative;
    z-index: 1;
  }

  .announcement-bar__message {
    margin: 0;
    font-weight: 500;
    font-size: 1.4rem;
  }

  .announcement-bar__link {
    color: #000;
    text-decoration: underline;
    font-weight: 600;
    transition: opacity 0.3s ease;
  }

  .announcement-bar__link:hover {
    opacity: 0.8;
  }

  @keyframes shimmer {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  @media (max-width: 768px) {
    .announcement-bar__container {
      flex-direction: column;
      gap: 1rem;
    }

    .announcement-bar__message {
      font-size: 1.2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Message",
      "default": "Free shipping on orders over $100"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Learn More"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}
