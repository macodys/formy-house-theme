{% comment %}
  Featured Products Section - Scroll-triggered animations
{% endcomment %}

<div class="featured-products" id="featured-products">
  <div class="featured-products__container">
    <div class="featured-products__header">
      <h2 class="featured-products__title">{{ section.settings.heading | default: 'Featured Products' }}</h2>
      <p class="featured-products__subtitle">{{ section.settings.subheading | default: 'Discover our curated collection' }}</p>
    </div>
    
    <div class="featured-products__grid">
      {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
        <div class="featured-product" data-aos="fade-up" data-aos-delay="{{ forloop.index0 | times: 100 }}">
          <div class="featured-product__image">
            {% if product.featured_image %}
              {{ product.featured_image | image_url: width: 400 | image_tag: loading: 'lazy', alt: product.title }}
            {% else %}
              <div class="featured-product__placeholder">
                <div class="featured-product__icon"></div>
              </div>
            {% endif %}
            <div class="featured-product__overlay">
              <a href="{{ product.url }}" class="featured-product__link">View Product</a>
            </div>
          </div>
          <div class="featured-product__content">
            <h3 class="featured-product__title">{{ product.title }}</h3>
            <div class="featured-product__price">
              {% if product.compare_at_price > product.price %}
                <span class="featured-product__price--sale">{{ product.price | money }}</span>
                <span class="featured-product__price--compare">{{ product.compare_at_price | money }}</span>
              {% else %}
                <span class="featured-product__price--regular">{{ product.price | money }}</span>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .featured-products {
    padding: 8rem 0;
    background: var(--color-background);
    position: relative;
  }

  .featured-products::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 50%, rgba(212, 175, 55, 0.03) 0%, transparent 70%);
    pointer-events: none;
  }

  .featured-products__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .featured-products__header {
    text-align: center;
    margin-bottom: 6rem;
  }

  .featured-products__title {
    font-family: var(--font-heading-family);
    font-size: 4rem;
    font-weight: 300;
    margin: 0 0 1rem 0;
    color: #ffffff;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
  }

  .featured-products__title.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .featured-products__subtitle {
    font-size: 1.8rem;
    color: #cccccc;
    margin: 0;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease 0.2s;
  }

  .featured-products__subtitle.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 4rem;
  }

  .featured-product {
    background: linear-gradient(145deg, #1a1a1a, #0f0f0f);
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.5s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    opacity: 0;
    transform: translateY(50px);
    position: relative;
  }

  .featured-product.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .featured-product:hover {
    transform: translateY(-10px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
    border-color: rgba(212, 175, 55, 0.3);
  }

  .featured-product__image {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: hidden;
    background: #2a2a2a;
  }

  .featured-product__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .featured-product:hover .featured-product__image img {
    transform: scale(1.1);
  }

  .featured-product__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(145deg, #2a2a2a, #1a1a1a);
  }

  .featured-product__icon {
    width: 100px;
    height: 100px;
    background: linear-gradient(145deg, #d4af37, #b8941f);
    border-radius: 50%;
    box-shadow: 0 0 30px rgba(212, 175, 55, 0.5);
    animation: glow 3s ease-in-out infinite alternate;
  }

  .featured-product__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .featured-product:hover .featured-product__overlay {
    opacity: 1;
  }

  .featured-product__link {
    padding: 1.2rem 2.5rem;
    background: var(--color-accent);
    color: #000;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .featured-product__link:hover {
    background: #ffffff;
    transform: translateY(-2px);
  }

  .featured-product__content {
    padding: 2.5rem;
  }

  .featured-product__title {
    font-family: var(--font-heading-family);
    font-size: 2rem;
    font-weight: 300;
    margin: 0 0 1rem 0;
    color: #ffffff;
  }

  .featured-product__price {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .featured-product__price--regular,
  .featured-product__price--sale {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--color-accent);
  }

  .featured-product__price--compare {
    font-size: 1.4rem;
    color: #999;
    text-decoration: line-through;
  }

  @keyframes glow {
    0% { box-shadow: 0 0 30px rgba(212, 175, 55, 0.5); }
    100% { box-shadow: 0 0 40px rgba(212, 175, 55, 0.8); }
  }

  @media (max-width: 768px) {
    .featured-products {
      padding: 4rem 0;
    }

    .featured-products__title {
      font-size: 3rem;
    }

    .featured-products__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .featured-product__content {
      padding: 2rem;
    }
  }
</style>

<script>
  // Scroll-triggered animations
  document.addEventListener('DOMContentLoaded', function() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate');
        }
      });
    }, observerOptions);

    // Observe title and subtitle
    const title = document.querySelector('.featured-products__title');
    const subtitle = document.querySelector('.featured-products__subtitle');
    
    if (title) observer.observe(title);
    if (subtitle) observer.observe(subtitle);

    // Observe product cards
    const products = document.querySelectorAll('.featured-product');
    products.forEach((product, index) => {
      observer.observe(product);
    });
  });
</script>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our curated collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products to show",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
